<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ✅ Required for internet access (Firebase, Facebook, Google login) -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:label="pathshala"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <!-- ✅ Facebook App ID (REQUIRED for Facebook login) -->
        <!-- Value comes from strings.xml -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <!-- ✅ Facebook Client Token (CRITICAL) -->
        <!-- Get from Facebook Developer Console → Settings → Advanced -->
        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@string/facebook_client_token"/>

        <!-- ✅ Enable Facebook SDK auto initialization -->
        <meta-data
            android:name="com.facebook.sdk.AutoInitEnabled"
            android:value="true"/>

        <!-- ✅ Enable automatic app event logging -->
        <meta-data
            android:name="com.facebook.sdk.AutoLogAppEventsEnabled"
            android:value="true"/>

        <!-- Main Flutter activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Flutter normal theme (shown after splash) -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme"/>

            <!-- App launch entry point -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- ✅ REQUIRED for Flutter plugin registration (Embedding v2) -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2"/>
    </application>

    <!-- Required by Flutter for text processing -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>

</manifest>
